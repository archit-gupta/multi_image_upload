<%= simple_nested_form_for(@album, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>  
  <h3>Photos</h3>
    <div id="photos">
      <% if @album.new_record? %>
         <%= render :partial => 'photo', :locals => { :form => f, :photo => @album.photos.build } %>
      <% else %>
        <%= render :partial => 'photo', :locals => { :form => f} %>
      <% end %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>


