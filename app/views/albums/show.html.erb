  <p>
    <b>Album Name:</b>
    <%= @album.name %>
  </p>
  <p>
    <%= link_to 'Edit', edit_album_path(@album), :class => "btn btn-small" %>
    <%= link_to 'Back', albums_path, :class => "btn btn-small" %>
  </p>

  <% @album.photos.each do |photo| %>
    <%= image_tag photo.image.url(:thumb) %>
  <% end %>